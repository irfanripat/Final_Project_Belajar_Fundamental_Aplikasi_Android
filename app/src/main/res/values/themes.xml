<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubUser" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/font_black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->

        <!-- Default font color -->
        <item name="android:textColor">@color/font_black</item>
    </style>

    <style name="Theme.SplashScreen" parent="Theme.GithubUser">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.MainActivity" parent="Theme.MaterialComponents.Light.DarkActionBar"/>

    <style name="Theme.DetailActivity" parent="Theme.GithubUser">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">#fff</item>
    </style>

    <style name="TextInputLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_marginTop">6dp</item>
        <item name="boxStrokeColor">@color/font_black</item>
        <item name="android:textColorHint">@color/font_black</item>
        <item name="boxBackgroundColor">#EDEEF1</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="boxCornerRadiusTopStart">6dp</item>
        <item name="boxCornerRadiusTopEnd">6dp</item>
    </style>

    <style name="TextInputEditTextTheme">
    <item name="android:maxLines">1</item>
    <item name="android:textColor">@color/font_black</item>
    <item name="android:textSize">14sp</item>
    <item name="android:drawablePadding">15dp</item>
    </style>
</resources>